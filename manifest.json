{
  "manifest_version": 2,

  "name": "Dashboardify Chrome Plugin",
  "description": "This extension allows user to watch selected area of any website",
  "version": "0.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "permissions": [
    "activeTab",
    "tabs"
  ]
}
